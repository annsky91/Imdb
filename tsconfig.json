{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "target": "ES2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../Modules/node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "../Modules/*",
                "../Modules/node_modules/*"
            ],
            "imdb/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "../Modules",
        "src"
    ],
    "exclude": [
        "node_modules",
        "../Modules/node_modules"
    ]
}